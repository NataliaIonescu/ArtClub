@model IEnumerable<ArtClub.Models.Event>

@{
    ViewData["Title"] = "Index";
}
<!-- la sfarsitul head tagului -->
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- la sfarsitul body tagului -->
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>


<div class="container">
    <h1 class="my-4" style="color:white">Event List</h1>
    <div class="row mb-4">
        <div class="col-12 col-md-6">
            <a class="btn btn-primary" asp-action="Create">Create New Event</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover table-dark">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                        <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Resource)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Resource.Id)</td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('css/event2.jpg');
        background-size: cover;
        background-position: center;
    }
</style>
